class ChaiShop {
    String branchName;
    int cupsSold;
    int pricePerCup;
    
    public ChaiShop(String branchName,int cupsSold,int pricePerCup){           // Constructor : Creating a function with same class name is called constructor.
        this.branchName=branchName;
        this.cupsSold=cupsSold;
        this.pricePerCup=pricePerCup;
    }
    public void revinue(){
        System.out.println("Total Revinue Generated By "+branchName+" is = "+cupsSold*pricePerCup);
    }
    public void display(){                                                // Method : Creating a function in a class is called method.
        System.out.println(branchName);
        System.out.println(cupsSold);
        System.out.println(pricePerCup);
        revinue();
    }
    
}
class Main {
    public static void main(String[] args) {
        ChaiShop branch1=new ChaiShop("Adda",5,7);                // Object : Using class name as a datatype and uses new keyword in it is called object.
        branch1.display();
        
        ChaiShop branch2=new ChaiShop("Boom",8,9);
        branch2.display();
    }
}
